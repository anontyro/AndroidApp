<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#f9f9f9"></solid>
            <corners android:radius="60dp"></corners>
            <stroke android:color="@color/colorAccent" android:width="5dp"></stroke>
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp"></padding>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#9e9e9e"></solid>
            <corners android:radius="60dp"></corners>
            <stroke android:color="@color/colorAccent" android:width="5dp"></stroke>
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp"></padding>
        </shape>
    </item>

</selector>